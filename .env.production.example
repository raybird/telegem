TELEGRAM_TOKEN=your_bot_token_here
ALLOWED_USER_ID=your_telegram_user_id_here
DB_DIR=./data

# Production baseline (conservative)
RUNNER_ENDPOINT=http://agent-runner:8787
SCHEDULE_USE_RUNNER=true
CHAT_USE_RUNNER_PERCENT=0
CHAT_USE_RUNNER_ONLY_USERS=your_telegram_user_id_here

# Runner security (required in production)
RUNNER_SHARED_SECRET=change_this_to_a_long_random_secret

# Runner resilience
RUNNER_FAILURE_THRESHOLD=3
RUNNER_COOLDOWN_MS=60000

# Context snapshots
CONTEXT_REFRESH_MS=60000

# Optional observability path overrides
RUNNER_AUDIT_PATH=
RUNNER_STATUS_PATH=
