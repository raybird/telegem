TELEGRAM_TOKEN=your_bot_token_here
ALLOWED_USER_ID=your_telegram_user_id_here
DB_DIR=./data

# === Runner 配置 (雙服務架構標準配置) ===
RUNNER_ENDPOINT=http://agent-runner:8787
# 排程任務是否使用 runner 執行 (預設: true)
SCHEDULE_USE_RUNNER=true
# 聊天訊息使用 runner 的百分比 0-100 (預設: 100,全部走 runner)
CHAT_USE_RUNNER_PERCENT=100
# 限定使用 runner 的使用者 ID (逗號分隔,留空則使用 ALLOWED_USER_ID)
CHAT_USE_RUNNER_ONLY_USERS=your_telegram_user_id_here

# === Runner 安全性 (生產環境必須設定) ===
# Runner API 的共享密鑰 (必須設定強密碼)
RUNNER_SHARED_SECRET=change_this_to_a_long_random_secret

# === Runner 熔斷機制 ===
# 連續失敗幾次後觸發熔斷 (預設: 3)
RUNNER_FAILURE_THRESHOLD=3
# 熔斷冷卻時間 (毫秒,預設: 60000 = 1分鐘)
RUNNER_COOLDOWN_MS=60000

# Context snapshots
CONTEXT_REFRESH_MS=60000

# Local Web Console
WEB_ENABLED=true
WEB_BIND=0.0.0.0
WEB_PORT=3030
WEB_AUTH_TOKEN=
WEB_TRUST_PRIVATE_NETWORK=false
WEB_ALERT_ERROR_THRESHOLD=1
WEB_ALERT_RUNNER_SUCCESS_WARN_THRESHOLD=80
WEB_USER_ID=

# Optional observability path overrides
RUNNER_AUDIT_PATH=
RUNNER_STATUS_PATH=
