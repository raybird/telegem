TELEGRAM_TOKEN=your_bot_token_here
ALLOWED_USER_ID=your_telegram_user_id_here
DB_DIR=./data

# Recommended baseline (single-user)
RUNNER_ENDPOINT=http://agent-runner:8787
SCHEDULE_USE_RUNNER=true
CHAT_USE_RUNNER_PERCENT=10
CHAT_USE_RUNNER_ONLY_USERS=your_telegram_user_id_here

# Runner security
RUNNER_SHARED_SECRET=change_this_to_a_long_random_secret

# Runner resilience
RUNNER_FAILURE_THRESHOLD=3
RUNNER_COOLDOWN_MS=60000

# Context snapshots
CONTEXT_REFRESH_MS=60000

# Local Web Console
WEB_ENABLED=true
WEB_BIND=0.0.0.0
WEB_PORT=3030
WEB_AUTH_TOKEN=
WEB_TRUST_PRIVATE_NETWORK=true
WEB_ALERT_ERROR_THRESHOLD=1
WEB_ALERT_RUNNER_SUCCESS_WARN_THRESHOLD=80
WEB_USER_ID=

# Runner observability (optional overrides)
RUNNER_AUDIT_PATH=
RUNNER_STATUS_PATH=
